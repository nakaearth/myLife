%div.album_form#album_form
  = form_for @album do |f|
    -if @album.errors.any?
      #error_explanation
        %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
        %ul
          - @album.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label 'アルバムを公開する:'
      = f.check_box :album_type
    .field
      = f.label :album_date
      = f.date_select :album_date
    .field
      &nbsp;&nbsp;
      = f.text_area :description
    .actions
      = f.submit '登録'
