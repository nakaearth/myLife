%div.event_div
  %div.event_form#event_form
    = form_for @event do |f|
      -if @event.errors.any?
        #error_explanation
          %h2= "#{pluralize(@event.errors.count, "error")} prohibited this evnet from being saved:"
          %ul
            - @event.errors.full_messages.each do |msg|
              %li= msg
      .field
        = f.label :name
        = f.text_field :name
      .field
        = f.label :event_description
        = f.text_area :event_description
      .field
        = f.label :start_at
        = f.date_select :start_at
      .field
        = f.label :end_at
        = f.date_select :end_at
      .actions
        = f.submit '登録'
